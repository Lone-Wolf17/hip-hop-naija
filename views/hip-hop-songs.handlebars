<div class="mt-3">
  <form
    action="/update-playlist-on-spotify?accessToken={{accessToken}}"
    method="POST"
  >
    <input type="hidden" name="hipHopSongs" value="{{hipHopSongs}}" />
    <input type="hidden" name="accessToken" value="{{accessToken}}" />
    <input
      type="submit"
      class="btn btn-primary"
      value="Update Playlist on Spotify"
    />
  </form>
  {{!-- <a
    href="/update-playlist-on-spotify?accessToken={{accessToken}}"
    class="btn btn-primary"
    id="update-spotify-playlist"
  >
    Update Playlist on Spotify
  </a> --}}
  {{#each hipHopSongs}}
    <div class="media">
      <div class="pull-left">
        <img class="media-object" width="150" src="{{imageUrl}}" />
      </div>
      <div class="media-body">
        <dl class="dl-horizontal">
          <dt><b>Name:</b></dt><dd>{{name}}</dd>
          <dt><b>Song ID:</b></dt><dd class="clearfix">{{spotifyID}}</dd>
          <dt><b>Artist Name:</b></dt><dd>{{artistName}}</dd>
          <dt><b>Artist ID:</b></dt><dd>{{artistID}}</dd>
          <dt><b>Top 200 Rank:</b></dt><dd>{{top200Rank}}</dd>
        </dl>
      </div>
    </div>
  {{/each}}
</div>

<script>
  document.getElementById("update-spotify-playlist").addEventListener( "click",
  function () { $.ajax({ url: "/refresh_token", data: { refresh_token:
  refresh_token, }, }).done(function (data) { access_token = data.access_token;
  oauthPlaceholder.innerHTML = oauthTemplate({ access_token: access_token,
  refresh_token: refresh_token, }); }); }, false );
</script>